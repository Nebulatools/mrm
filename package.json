{
  "name": "hr-kpi-dashboard",
  "version": "1.0.0",
  "description": "HR KPI Dashboard with Next.js and Supabase",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
